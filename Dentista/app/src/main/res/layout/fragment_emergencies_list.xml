<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EmergenciesListFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEmergenciesList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnEmergenciesHistoric"
        tools:listitem="@layout/emergency_card" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEmergenciesHistoric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvEmergenciesList"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/fragment_emergencies_historic"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="10sp"
        android:layout_marginTop="15dp"
        android:background="@color/tk_blue"
        android:layout_marginBottom="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>